html
  head
    style
      include ../scss/index.scss
    script
      include ../../build/js/index.js
    title TK
  body
    p See election results for presidential elections 2004-2012
    form.inputs
      input.year(type ="radio" name = "year" id = "2004" value = "2004")
      label.year-label(for = "2004") 2004 
      input.year(type = "radio" name = "year" id = "2008" value = "2008") 
      label.year-label(for = "2008") 2008
      input.year(type = "radio" name = "year" id = "2012" value = "2012" checked) 
      label.year-label(for = "2012") 2012
    .map#map
    .form
      p Submit additional data
      form.submits#form-submit
        for i in ['state', 'candidate', 'vote']
          label(for = i) #{i}
          input.data(type = text name = i id = i)
        button(type = "submit") submit
    pre(class = "debug")
      code.results